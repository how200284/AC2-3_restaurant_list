<!-- ./views/edit.handlebars -->
<div class="container mt-5">
  <div>
    <h1>Update Restaurant Info:</h1>
  </div>

  <form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Restaurant Name</label>
      <input name="name" type="text" value="{{ restaurant.name }}" class="form-control" id="name" aria-describedby="name"
        required>
    </div>

    <div class="mb-3">
      <label for="name_en" class="form-label">Restaurant Name in English</label>
      <input name="name_en" type="text" value="{{ restaurant.name_en }}" class="form-control" id="name_en"
        aria-describedby="name_en" required>
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">Category</label>
      <input name="category" type="text" value="{{ restaurant.category }}" class="form-control" id="category"
        aria-describedby="category" required>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input name="image" type="text" value="{{ restaurant.image }}" class="form-control" id="image"
        aria-describedby="image" required>
    </div>

    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input name="location" type="text" value="{{ restaurant.location }}" class="form-control" id="location"
        aria-describedby="location" required>
    </div>

    <div class="mb-3">
      <label for="phone" class="form-label">Phone number</label>
      <input name="phone" type="text" value="{{ restaurant.phone }}" class="form-control" id="phone"
        aria-describedby="phone" required>
    </div>

    <div class="mb-3">
      <label for="google_map" class="form-label">Google Map URL</label>
      <input name="google_map" type="text" value="{{ restaurant.google_map }}" class="form-control"
        id="google_map" aria-describedby="google_map" required>
    </div>

    <div class="mb-3">
      <label for="rating" class="form-label">Rating</label>
      <input name="rating" type="text" value="{{ restaurant.rating }}" class="form-control" id="rating" aria-describedby="rating"
        required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <input name="description" type="text" value="{{ restaurant.description }}" class="form-control" id="description"
        aria-describedby="description" required>
    </div>

    <a class="btn btn-secondary" href="/restaurants/{{ restaurant._id }}">Back</a>
    <button type="submit" class="btn btn-primary">Save</button>

  </form>
</div>